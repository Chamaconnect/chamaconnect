<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- styles applied to the property cards. -->
  <style name="listing_card_image">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:scaleType">centerCrop</item>
	</style>

	<style name="list_card_bottom_bar">
      <item name="android:orientation">vertical</item>
      <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">bottom</item>
	    <item name="android:paddingLeft">10dp</item>
	    <item name="android:paddingRight">10dp</item>
	    <item name="android:paddingBottom">10dp</item>
	    <item name="android:background">@drawable/property_shadow</item>
	</style>

	<style name="list_card_location">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">right</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:textAllCaps">true</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:background">@drawable/white_border_set</item>
	</style>

	<style name="list_card_description">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">right</item>
	   	<item name="android:layout_marginTop">2dp</item>
	    <item name="android:layout_marginBottom">2dp</item>
	    <item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">@color/white</item>
	</style>

	<style name="list_card_price">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">right</item>
	    <item name="android:text">6,000,000 Ksh</item>
	    <item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginBottom">2dp</item>
	    <item name="android:textColor">@color/grey_400</item>
	</style>
x`
</resources>