<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- styles applied to the property cards. -->
  <style name="listing_card_image">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">250dp</item>
    <item name="android:scaleType">centerCrop</item>
	</style>

	<style name="list_card_bottom_bar">
      <item name="android:orientation">vertical</item>
      <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">bottom</item>
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:background">@drawable/property_shadow</item>
	</style>

	<style name="list_card_location">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">right</item>
	    <item name="android:text">KAREN</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:background">@drawable/white_border_set</item>
	</style>

	<style name="list_card_description">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">right</item>
	    <item name="android:text">The waterman business park</item>
	    <item name="android:textSize">22sp</item>
	    <item name="android:background">@drawable/white_border_set</item>
	</style>

	<style name="list_card_price">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">right</item>
	    <item name="android:text">6,000,000 Ksh</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:background">@drawable/white_border_set</item>
	</style>

</resources>