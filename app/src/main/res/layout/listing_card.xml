<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/property_height"
    android:layout_marginBottom="@dimen/card_bottom_margin"
    android:layout_marginRight="@dimen/side_margin"
    android:layout_marginLeft="@dimen/side_margin"
    cardview:cardCornerRadius="0dp">

  <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
      android:id="@+id/thumbnail"
      style="@style/listing_card_image">
    </com.android.volley.toolbox.NetworkImageView>

    <LinearLayout style="@style/list_card_bottom_bar">

	    <TextView
	        android:id="@+id/title"
	        style="@style/list_card_location"/>

	    <TextView
	        android:id="@+id/desc"
	        style="@style/list_card_description"/>

	    <TextView
	        android:id="@+id/price"
	        style="@style/list_card_price"/>

      </LinearLayout>

  </FrameLayout>

</android.support.v7.widget.CardView>